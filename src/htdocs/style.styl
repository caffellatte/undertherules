.box
    width 300px
    float left
    margin 0 20px 0 20px
    div
        border-color grey
        height 300px
        overflow auto
    input
        height 30px

.box div, .box input
    border 1px solid
    -moz-border-radius 4px
    border-radius 4px
    width 100%
    padding 0px
    margin 5px

h1
    margin-left 30px

body
    background-image url("svg/grid.svg")
    font-family "Arial"

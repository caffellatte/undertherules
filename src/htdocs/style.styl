body
    font sans-serif, Helvetica, Arial

#main
    background-color #ffffff
    background-position center
    border-bottom #ccc 3px

#output
    box-sizing border-box
    border-collapse separate
    border groove #fefefe 3px
    background #ececec
    padding 3px
    overflow auto

.rep
    box-sizing border-box
    border-collapse separate
    border groove #fefefe 3px
    background #fff
    display block
    float left
    padding 6px

.req
    box-sizing border-box
    border-collapse separate
    border groove #fefefe 3px
    background #ccc
    display block
    float right
    padding 6px


#input
    display block
    box-sizing border-box
    border-collapse separate
    border groove #fefefe 3px
    background #ccc
    padding 3px
    float right

#line
    text-align right
    background #eee
